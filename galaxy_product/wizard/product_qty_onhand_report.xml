<openerp>
    <data>
        <record id="view_wiz_product_qty_on_hand_form" model="ir.ui.view">
            <field name="name">wiz.product.qty.on.hand.form</field>
            <field name="model">product.qty.on.hand</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Sales Reports">
                    <group >
                        <field name="date_from" />
                        <field name="date_to" />
                        <field name="zero_qty" />
                        <field name="in_active_product" />
                    </group>
                    <newline/>
                   	<separator string="Products" />
                   	<field name="product_ids"/>
                    <footer>
                        <button name="print_report" string="Print" type="object" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_wiz_product_qty_on_hand_report" model="ir.actions.act_window">
            <field name="name">Product Qty Available</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.qty.on.hand</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        <menuitem id="menu_wiz_product_qty_on_hand_report" action="action_wiz_product_qty_on_hand_report"
            parent="base.next_id_64"/>
        
        <record id="view_wiz_galaxy_sales_report_detail_form" model="ir.ui.view">
            <field name="name">wiz.product.qty.on.hand.detail.form</field>
            <field name="model">wiz.product.qty.on.hand.detail</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Sales Reports">
                    <group col="4" colspan="4">
                        <label string="Save the File with '.xls' extension."
                            colspan="4" />
                        <field name="name" invisible="1" />
                        <field name="file" readonly="1" filename="name" nolabel="1" />
                    </group>
                    <footer>
                        <button name="action_back" string="_Back" type="object" class="oe_highlight"/>
                        or
                        <button string="Close" class="oe_highlight" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>
