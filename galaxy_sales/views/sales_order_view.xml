<openerp>
	<data>

		<!-- Inherited Tree view of sale order -->
		<record id="inherited_sale_tree_view" model="ir.ui.view">
			<field name="name">inherited.sale.order.tree.view.ex</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_tree" />
			<field name="arch" type="xml">
				<xpath expr="/tree/field[@name='user_id']" position='attributes'>
					<attribute name="invisible">1</attribute>
				</xpath>
			</field>
		</record>


		<!-- Inherited form view of sale order -->
		<record id="inherited_sale_form_view" model="ir.ui.view">
			<field name="name">inherited.sale.form.view.ex</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="arch" type="xml">

				<button name="print_quotation" string="Print" type="object"
					states="draft" class="oe_highlight" groups="base.group_user"
					position='replace'>
					<button name="print_quotation" string="Print" type="object"
						invisible="1" class="oe_highlight" groups="base.group_user" />
				</button>
				<button name="print_quotation" string="Print" type="object"
					states="sent,progress,manual" groups="base.group_user" position='replace'>
					<button name="print_quotation" string="Print" type="object"
						invisible="1" groups="base.group_user" />
				</button>
				<button name="action_quotation_send" string="Send by Email"
					type="object" states="draft" class="oe_highlight" groups="base.group_user"
					position='replace'>
					<button name="action_quotation_send" string="Send by Email"
						type="object" invisible="1" class="oe_highlight" groups="base.group_user" />
				</button>
				<button name="action_quotation_send" string="Send by Email"
					type="object" states="sent,progress,manual" groups="base.group_user"
					position='replace'>
					<button name="action_quotation_send" string="Send by Email"
						type="object" invisible="1" groups="base.group_user" />
				</button>
				<xpath
					expr="/form[@string='Sales Order']/header/button[@name='print_quotation']"
					position='attributes'>
					<attribute name="invisible">1</attribute>
				</xpath>
				<xpath
					expr="/form[@string='Sales Order']/header/button[@name='action_button_confirm']"
					position="before">
					<button name="%(wiz_galaxy_add_prod_in_so_action)d" string="Add Products"
						type="action" states="draft" groups="base.group_user" />
				</xpath>
				<xpath
					expr="//page[@string='Order Lines']/field[@name='order_line']/form//field[@name='price_unit']"
					position='after'>
					<field name="origin_ids" widget="many2many_tags" />
					<field name="no_origin" />
				</xpath>
				<xpath
					expr="//page[@string='Order Lines']/field[@name='order_line']/tree[@string='Sales Order Lines']/field[@name='product_uom_qty']"
					position='after'>
					<field name="origin_ids" widget="many2many_tags" invisible="1" />
					<field name="no_origin" invisible="1" />
				</xpath>

				<xpath expr="/form/sheet/group/group/field[@name='partner_invoice_id']"
					position="attributes">
					<attribute name="context">{'search_default_customer':1,
						'show_address': 1,'default_type':'invoice'}
					</attribute>
					<attribute name="domain">['|',('type','=','invoice'),'|',('parent_id','=',partner_id),('id','=',partner_id)]
					</attribute>
					<attribute name="options">{"always_reload": True}</attribute>
				</xpath>

				<xpath expr="/form/sheet/group/group/field[@name='partner_shipping_id']"
					position="attributes">
					<attribute name="context">{'search_default_customer':1,
						'show_address': 1,'default_type':'delivery'}
					</attribute>
					<attribute name="domain">['|',('type','=','delivery'),'|',('parent_id','=',partner_id),('id','=',partner_id)]
					</attribute>
					<attribute name="options">{"always_reload": True}</attribute>
				</xpath>

				<xpath expr="/form/sheet/group/group/field[@name='partner_shipping_id']"
					position="after">
					<field name="attn_sal"
						domain="[('type','=','contact'),'|',('parent_id','=',partner_id),('id','=',partner_id)]"
						attrs="{'readonly': [('state','not in',('draft','sent'))]}"
						options="{'no_create': True}" />
					<field name="customer_po" />
					<field name="direct_invoice" invisible="1" />
				</xpath>
				<xpath
					expr="//page[@string='Order Lines']/field[@name='order_line']/tree[@string='Sales Order Lines']/field[@name='price_unit']"
					position='replace'>
				</xpath>

				<xpath
					expr="//page[@string='Order Lines']/field[@name='order_line']/tree[@string='Sales Order Lines']/field[@name='price_subtotal']"
					position='replace'>
				</xpath>

				<xpath
					expr="//page[@string='Order Lines']/field[@name='order_line']/tree[@string='Sales Order Lines']/field[@name='tax_id']"
					position='replace'>
				</xpath>

				<xpath
					expr="//page[@string='Order Lines']/field[@name='order_line']/tree[@string='Sales Order Lines']/field[@name='discount']"
					position='after'>
					<field name="price_unit" />
					<field name="price_subtotal" />
					<field name="tax_id" widget="many2many_tags"
						domain="[('parent_id','=',False),('type_tax_use','&lt;&gt;','purchase')]" />
				</xpath>

				<xpath
					expr="//page[@string='Order Lines']/field[@name='order_line']/tree[@string='Sales Order Lines']/field[@name='name']"
					position='after'>
					<field name="qty_on_hand" readonly="1" />
				</xpath>

				<field name="pricelist_id" position="after">
					<field name="currency_rate" />
				</field>
				
				<xpath expr="//group[@class='oe_subtotal_footer oe_right']" position="replace">
                    <group col="4">
                       <group name="discount">
                            <field name="discount_type"/>
                            <field name="discount_rate"/>
                        </group>
                        <group class="oe_subtotal_footer oe_right">
                            <field name="amount_untaxed" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <field name="amount_discount" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <field name="amount_tax" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <div class="oe_subtotal_footer_separator oe_inline">
                                    <label for="amount_total" />
                                    <button name="button_dummy"
                                        states="draft,sent" string="(update)" type="object" class="oe_edit_only oe_link"/>
                                </div>
                            <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                </xpath>

				<!-- <xpath expr="//field[@name='amount_untaxed']" position="after"> 
					<field name="landed_cost_price" readonly="1" widget="monetary" options="{'currency_field': 
					'currency_id'}" /> </xpath> -->

				<!-- <xpath expr="//page[@string='Other Information']" position='after'> 
					<page string="Landed Cost Details"> <field name="landed_cost_sal"> <tree 
					editable="bottom"> <field name="landed_id"/> <field name="amount"/> </tree> 
					</field> </page> </xpath> -->

			</field>
		</record>

		<!-- Inherited Search view of sale order -->
		<record id="inherited_view_sales_order_filter" model="ir.ui.view">
			<field name="name">inherited.sale.form.view</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_sales_order_filter" />
			<field name="arch" type="xml">
				<xpath expr="//search/group/filter[@string='Order Month']"
					position="after">
					<field name="pricelist_id" />
					<field name="date_order" />
					<filter name="grp_currency" string="Currency" domain="[]"
						context="{'group_by':'pricelist_id'}" />
					<filter string="Day" domain="[ ]" context="{'group_by': 'date_order:day'}" />
				</xpath>
			</field>
		</record>

		<!-- Action for sale order line -->
		<record id="action_sale_order_line" model="ir.actions.act_window">
			<field name="name">Sale Order Line</field>
			<field name="res_model">sale.order.line</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'search_default_product_id':active_id,'default_product_id':active_id}
			</field>
			<field name="domain">[('state','!=',['done','cancel'])]</field>

		</record>

		<!-- Inherited product template only form view -->
		<record id="product_template_form_view_qty_button" model="ir.ui.view">
			<field name="name">product.template_qty</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//div[@name='buttons']" position="inside">
					<button class="oe_stat_button" string="Qty"
						name="%(galaxy_sales.action_sale_order_line)d" icon="fa-building-o"
						type="action" />
				</xpath>
			</field>
		</record>
	</data>
</openerp>