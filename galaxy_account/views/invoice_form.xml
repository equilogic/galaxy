<openerp>
	<data>
		

		<!-- Inherited Form View of Invoice Tree (Customer Invoices) -->
		<record id="invoice_tree_inherited_new" model="ir.ui.view">
			<field name="name">invoice.tree.inherited.new</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_tree" />
			<field name="arch" type="xml">
				 <xpath expr="//tree/field[@name='number']" position="attributes">
                    <attribute name="string">Invoice No.</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='user_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                 <xpath expr="//tree/field[@name='date_due']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                 <xpath expr="//tree/field[@name='origin']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                 <xpath expr="//tree/field[@name='residual']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
           </field>
       </record>


		<record id="action_view_del_order_from_invoice" model="ir.actions.act_window">
            <field name="name">Delievery Order</field>
            <field name="res_model">stock.picking</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="stock.vpicktree"/>
             <field name="domain">[('inv_id','=',active_id)]</field>
        </record>

		<record id="action_view_sale_order_from_invoice" model="ir.actions.act_window">
            <field name="name">Sale Order</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="sale.view_order_tree"/>
             <field name="domain">[('inv_id','=',active_id)]</field>
        </record>

		<!-- Inherited Form View of Invoice Form (Customer Invoices) -->
		<record id="invoice_form_inherited_new" model="ir.ui.view">
			<field name="name">invoice.form.inherited.new</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_form" />
			<field name="arch" type="xml">
				<field name="state"  position="before">
					<button name="%(wiz_galaxy_add_prod_in_inv_action)d" string="Add Products"
						type="action" states="draft" groups="base.group_user" />
				</field>
				<xpath expr="//form/sheet[@string='Invoice']/h1" position="after">
					<div class="oe_right oe_button_box" name="btn_sale_order">
	                        <button class="oe_inline oe_stat_button" name="%(action_view_sale_order_from_invoice)d"
	                            string="Sale Order" type="action" widget="statinfo" icon="fa-pencil-square-o"/>
	                        <button class="oe_inline oe_stat_button" name="%(action_view_del_order_from_invoice)d"
	                            string="Delivery Order" type="action" widget="statinfo" icon="fa-pencil-square-o"/>
	            	</div>
				</xpath>
				
				 <field domain="[('company_id', '=', company_id),('type','=', 'receivable')]"
				     name="account_id" groups="account.group_account_user"
				     context="{'periods_special': False, 'all_fiscalyear': True}" position='replace'>
					 <field domain="[('company_id', '=', company_id),('type','=', 'receivable')]"
					     name="account_id" groups="account.group_account_user" invisible="1"
					     context="{'periods_special': False, 'all_fiscalyear': True}"/>
				 </field>              

                <xpath expr="//form/sheet" position="attributes">
                    <attribute name="class">oe_form_sheet_width_wider</attribute>
                </xpath>			
				<xpath expr="//field[@name='partner_id']" position="attributes">
					<attribute name="context">{'search_default_customer':1, 'default_type':'invoice'}</attribute>
				</xpath>
                <xpath expr="//field[@name='date_invoice']" position="replace"></xpath>
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="date_invoice" on_change="onchange_payment_term_date_invoice(payment_term, date_invoice)" />
                </xpath>
				<xpath expr="//field[@name='partner_id']" position="after">
					<label string=''/>
					<field name="cust_add" nolabel="1" options="{'always_reload': True}" invisible="1"
					/>
					<field name="part_inv_id"
						context="{'search_default_customer':1, 'default_type':'invoice'}"
						domain="['|',('parent_id','=',partner_id),('id','=',partner_id),('type','in',['invoice','contact'])]"
						options="{'always_reload': True}" />
					<label string=''/>
					<field name="part_inv_add" nolabel="1" options="{'always_reload': True}" 
					/>
					<field name="part_ship_id"
						context="{'search_default_customer':1,'default_type':'delivery'}"
						domain="['|',('parent_id','=',partner_id),('id','=',partner_id),('type','in',['delivery','contact'])]"
						options="{'always_reload': True}" />
					<label string=''/>
					<field name="part_ship_add" nolabel="1" options="{'always_reload': True}"
					/>
				</xpath>
				<button name="invoice_print" string="Print" type="object" attrs="{'invisible':['|',('sent','=',True), ('state', '!=', 'open')]}" class="oe_highlight" groups="base.group_user" position="replace">
					<button name="invoice_print" string="Print" type="object" invisible="1" class="oe_highlight" groups="base.group_user"/>
				</button>
				<button name="invoice_print" string="Print Invoice" type="object" attrs="{'invisible':['|',('sent','=',False), ('state', '!=', 'open')]}" groups="base.group_user" position="replace">
					<button name="invoice_print" string="Print Invoice" type="object" invisible="1" groups="base.group_user"/>
				</button>				
				<xpath expr="//page[@string='Payments']" position="after">
					<page string="Transport Details">
						<group col="4">
							<field name="ship_via_id" />
							<field name="vehicle_name" />
							<field name="from_id" />
							<field name="port_name_id" />							
							<field name="container_id" />
							<field name="container_place_area_code" />
							<field name="cases_id" />
							<field name="insurence_covered_id" />
							<field name="vessale_name_id" />
							<field name="bank" invisible="1"/>
							<field name="invoice_from_sale" invisible="1" />
						</group>
					</page>
					<page string="Landed Cost Details">
						<field name="landed_cost">
							<tree editable="bottom">
								<field name="landed_id" />
								<field name="amount" />
							</tree>
						</field>
					</page>
				</xpath>
				
				<xpath
					expr="//page[@string='Invoice Lines']/field[@name='invoice_line']/tree[@string='Invoice Lines']/field[@name='name']"
					position='attributes'>
					<attribute name="string">Item Name</attribute>
				</xpath>

				<xpath
					expr="//page[@string='Invoice Lines']/field[@name='invoice_line']/tree[@string='Invoice Lines']/field[@name='name']"
					position='after'>
					<field name="prod_desc" />
					<field name="qty_on_hand" readonly="1"/>
					<field name="profoma_qty" />
				</xpath>

				<xpath
					expr="//page[@string='Invoice Lines']/field[@name='invoice_line']/tree[@string='Invoice Lines']/field[@name='product_id']"
					position='attributes'>
					<attribute name='string'>Item No</attribute>
				</xpath>
                <xpath
                    expr="//page[@string='Invoice Lines']/field[@name='invoice_line']/tree[@string='Invoice Lines']/field[@name='account_id']"
                    position='attributes'>
                    <attribute name='invisible'>1</attribute>
                </xpath>

				<xpath
					expr="//page[@string='Invoice Lines']/field[@name='invoice_line']/tree[@string='Invoice Lines']/field[@name='quantity']"
					position='after'>
					<field name="origin_ids" widget="many2many_tags"
						attrs="{ 'readonly':[('no_origin', '=', True)]}" invisible="1" />
					<field name="no_origin" invisible="1"/>
				</xpath>

				<field name="account_id" position='after'>
					<field name="attn_inv"
						domain="[('type','=','contact'),('parent_id','=',partner_id)]"
						attrs="{'readonly': [('state','not in',('draft','sent','open'))]}"
						options="{'no_create': True}"/>
						
					<field name="customer_po"/>
					<field name="delivery_status"/>
					<field name="currency_rate" />
					<field name="export" />
					<field name="direct_shipemt" />
				</field>

				<xpath
					expr="//page[@string='Invoice Lines']/field[@name='invoice_line']/tree[@string='Invoice Lines']/field[@name='price_unit']"
					position='replace'>
				</xpath>
				<xpath
					expr="//page[@string='Invoice Lines']/field[@name='invoice_line']/tree[@string='Invoice Lines']/field[@name='discount']"
					position='after'>
					<field name="price_unit" />
				</xpath>

				<xpath
					expr="//page[@string='Invoice Lines']/field[@name='invoice_line']/tree[@string='Invoice Lines']/field[@name='price_subtotal']"
					position='replace'>
					<field name="invoice_line_tax_id" widget="many2many_tags"
						context="{'type':parent.type}"
						domain="[('parent_id','=',False),('company_id', '=', parent.company_id)]" />
				</xpath>

                <xpath expr="//group[@class='oe_subtotal_footer oe_right']" position="replace">
                    <group col="4">
                        <group name="discount">
                            <field name="discount_type"/>
                            <field name="discount_rate"/>
                        </group>
                        <group class="oe_subtotal_footer oe_right">
                            <field name="amount_untaxed" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="amount_discount" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <div>
                                <label for="amount_tax"/>
                                <button name="button_reset_taxes" states="draft,proforma2"
                                        string="(update)" class="oe_link oe_edit_only"
                                        type="object" help="Recompute taxes and total"/>
                            </div>
                            <field name="amount_tax" nolabel="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="amount_total" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="residual" groups="account.group_account_user" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="reconciled" invisible="1"/>
                        </group>
                    </group>
                </xpath>
                
				<xpath
					expr="//page[@string='Invoice Lines']/field[@name='invoice_line']/tree[@string='Invoice Lines']/field[@name='invoice_line_tax_id']"
					position='replace'>
					<field name="price_subtotal" />
				</xpath>

				<xpath expr="//field[@name='amount_untaxed']" position="after">
					<field name="landed_cost_price" readonly="1" widget="monetary"
						options="{'currency_field': 'currency_id'}" />
				</xpath>
                <xpath expr="//field[@name='journal_id']" position="replace">
                    <field name="journal_id" groups="account.group_account_user"
                        on_change="onchange_journal_id(journal_id)" options="{'no_create': True}"/>
                </xpath>
                <xpath expr="//field[@name='residual']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='fiscal_position']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <button name="button_reset_taxes" states="draft,proforma2"
                    string="(update)" class="oe_link oe_edit_only"
                    type="object" help="Recompute taxes and total" position="replace">
	                <button name="button_reset_taxes" states="draft,proforma2,open"
	                    string="(update)" class="oe_link oe_edit_only"
	                    type="object" help="Recompute taxes and total"/>
                </button>

			</field>
		</record>

		<!-- Inherited Form View of Supplier Invoice Form -->
		<record id="invoice_form_inherited" model="ir.ui.view">
			<field name="name">invoice.form.inherited</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_supplier_form" />
			<field name="arch" type="xml">
                <xpath expr="//form/sheet" position="attributes">
                    <attribute name="class">oe_form_sheet_width_wider</attribute>
                </xpath>	
				<field name="state"  position="before">
					<button name="%(wiz_galaxy_add_prod_in_inv_action)d" string="Add Products"
						type="action" states="draft" groups="base.group_user" />
				</field>                		
                <xpath expr="//field[@name='date_invoice']" position="replace"></xpath>
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="date_invoice" on_change="onchange_payment_term_date_invoice(payment_term, date_invoice)" />
                </xpath>
				     
				 <field domain="[('company_id', '=', company_id),('type','=', 'receivable')]"
				     name="account_id" groups="account.group_account_user"
				     context="{'periods_special': False, 'all_fiscalyear': True}" position='replace'>
					 <field domain="[('company_id', '=', company_id),('type','=', 'receivable')]"
					     name="account_id" groups="account.group_account_user" invisible="1"
					     context="{'periods_special': False, 'all_fiscalyear': True}"/>
				 </field>                  
                <xpath
                    expr="//page[@string='Invoice']/field[@name='invoice_line']/tree/field[@name='account_id']"
                    position='attributes'>
                    <attribute name='invisible'>1</attribute>
                </xpath>
				<xpath
					expr="//page[@string='Invoice']/field[@name='invoice_line']/tree/field[@name='product_id']"
					position='attributes'>
					<attribute name='string'>Item No</attribute>
				</xpath>
				<xpath
					expr="//page[@string='Invoice']/field[@name='invoice_line']/tree/field[@name='name']"
					position='attributes'>
					<attribute name='string'>Item Name</attribute>
				</xpath>
				<xpath
					expr="//page[@string='Invoice']/field[@name='invoice_line']/tree/field[@name='name']"
					position='after'>
					<field name="prod_desc"/>
					<field name="qty_on_hand" readonly="1"/>
				</xpath>
				<field name="number" class="oe_inline"  attrs="{'invisible': [('state', '=', 'draft')]}" position="replace">
					<field name="number" class="oe_inline" />
				</field>
				<xpath expr="//field[@name='partner_id']" position="attributes">
					<attribute name="context">{'search_default_supplier':1,
						'show_address': 1,'default_type':'invoice'}</attribute>
					<attribute name="options">{'always_reload': True}</attribute>
				</xpath>
				<xpath expr="//label[@for='reference_type']" position="attributes">
					<attribute name="style">color:white;</attribute>
				</xpath>
				<xpath expr="//field[@name='reference_type']" position="attributes">
					<attribute name="invisible">1</attribute>
				</xpath>
				<xpath expr="//field[@name='reference']" position="attributes">
					<attribute name="invisible">1</attribute>
				</xpath>
				<xpath expr="//field[@name='partner_id']" position="after">
					<field name="part_inv_id"
						context="{'search_default_supplier':1, 'show_address': 1,'default_type':'invoice'}"
                        domain="['|',('parent_id','=',partner_id),('id','=',partner_id),('type','in',['invoice','contact'])]"
						options="{'always_reload': True}" invisible="1"/>
					
					<field name="part_ship_id"
						context="{'search_default_supplier':1, 'show_address': 1,'default_type':'delivery'}"
                        domain="['|',('parent_id','=',partner_id),('id','=',partner_id),('type','in',['delivery','contact'])]"
						options="{'always_reload': True}" invisible="1" />
				</xpath>
				<xpath expr="//field[@name='fiscal_position']" position="after">
					<field name="attn_inv"
						domain="[('type','=','contact'),('parent_id','=',partner_id)]"
						attrs="{'readonly': [('state','not in',('draft','sent','open'))]}"
						options="{'no_create': True}"/>
					<field name="delivery_status"/>
				</xpath>
				<xpath
					expr="//page[@string='Invoice']/field[@name='invoice_line']/tree[@string='Invoice lines']/field[@name='quantity']"
					position='after'>
					<field name="origin_ids" widget="many2many_tags"
						attrs="{ 'readonly':[('no_origin', '=', True)]}" invisible="1" />
					<field name="no_origin" invisible="1" />
				</xpath>
				<field name="currency_id" position="after">
					<field name="currency_rate"/>
					<field name="export" />
					<field name="direct_shipemt" />
				</field>
				<xpath expr="//page[@string='Payments']" position="after">
					<page string="Transport Details">
						<group col="4">
							<field name="ship_via_id" />
							<field name="vehicle_name" />
							<field name="from_id" />
							<field name="port_name_id" />							
							<field name="container_id" />
							<field name="container_place_area_code" />
							<field name="cases_id" />
							<field name="insurence_covered_id" />
							<field name="vessale_name_id" />
							<field name="bank" invisible="1"/>
							<field name="invoice_from_sale" invisible="1" />
						</group>
					</page>
					<page string="Landed Cost Details">
						<field name="landed_cost">
							<tree editable="bottom">
								<field name="landed_id" />
								<field name="amount" />
							</tree>
						</field>
					</page>
				</xpath>
				<xpath expr="//field[@name='amount_untaxed']" position="after">
					<field name="landed_cost_price" readonly="1" widget="monetary"
						options="{'currency_field': 'currency_id'}" />
				</xpath>
				<xpath expr="//field[@name='journal_id']" position="replace">
                    <field name="journal_id" groups="account.group_account_user"
                        on_change="onchange_journal_id(journal_id)" options="{'no_create': True}"/>
                </xpath>
                <xpath expr="//field[@name='residual']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='fiscal_position']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <button name="button_reset_taxes" states="draft,proforma2" position="attributes"
                    string="(update)" class="oe_link oe_edit_only"
                    type="object" help="Recompute taxes and total">
	                <button name="button_reset_taxes" states="draft,proforma2,open"
	                    string="(update)" class="oe_link oe_edit_only"
	                    type="object" help="Recompute taxes and total"/>                    
                </button>                
			</field>
		</record>

		<record id="view_account_invoice_filter_inherit" model="ir.ui.view">
			<field name="name">account.invoice.select.inherit</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.view_account_invoice_filter" />
			<field name="arch" type="xml">
				<field name="partner_id" position="after">
					<field name="currency_id" />
					<field name="date_invoice" />
					<field name="customer_po"/>
				</field>
				<xpath expr="//search/group/filter[@string='Partner']"
					position="after">
					<filter name="currency_id" string="Currency" domain="[]"
						context="{'group_by':'currency_id'}" />
					<filter string="Day" domain="[ ]"
						context="{'group_by': 'date_invoice:day'}" />
				</xpath>
			</field>
		</record>


        <!-- Invoice Form View Inherited for Permit No-->
        <record id="view_supplier_invoice_form_extend" model="ir.ui.view">
            <field name="name">view.supplier.invoice.form.extend</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="sg_account_odoo.view_supplier_invoice_form_inherited" />
            <field name="arch" type="xml">
                <field name="permit_no" position="replace"/>
                <field name="account_id" position="after">
                    <field name="permit_no"/>
                </field>
            </field>
        </record>
        
        <!-- Invoice Form View Inherited for Permit No-->
        <record id="view_customer_invoice_form_extend" model="ir.ui.view">
            <field name="name">view.customer.invoice.form.extend</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="sg_account_odoo.view_customer_invoice_form_inherited" />
            <field name="arch" type="xml">
                <field name="permit_no" position="replace"/>
                <field name="account_id" position="after">
                    <field name="permit_no"/>
                </field>
            </field>
        </record>

		<record id="inherited_partner_view" model="ir.ui.view">
			<field name="name">inherited.partner.view</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='website']" position="after">
					<field name="cust_code" />
				</xpath>
				<field name="bank_ids" position="before">
				    <field name="bank_detail" placeholder="Bank Descriptions...."
				        cols="2" colspan="4"/>
				</field>
			</field>
		</record>
		
		 <!-- Landed Cost tree View -->
        <record id="landed_cost_tree_view" model="ir.ui.view" >
            <field name="name">landed.cost.tree.view</field>
            <field name="model">landed.cost</field>
            <field name="arch" type="xml">
                <tree string="Landed Cost">
	                <field name="name" />
	                <field name="amount"/>
				</tree>
            </field>
        </record>
		
		
		<!-- Landed Cost Action -->
        <record id="landed_cost_list_action" model="ir.actions.act_window" >
            <field name="name">Landed Cost</field>
            <field name="res_model">landed.cost</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <!-- Menu for Landed cost -->
        <menuitem id="landed_cost_menu" parent="base.menu_product"
                  action="landed_cost_list_action"/>
                  
		 <!-- Ship Via View -->
        <record id="landed_cost_tree_view" model="ir.ui.view" >
            <field name="name">ship.via.tree.view</field>
            <field name="model">ship.via</field>
            <field name="arch" type="xml">
                <tree string="Ship Via">
	                <field name="name" />
				</tree>
            </field>
        </record>
		
		
		<!-- Landed Cost Action -->
        <record id="ship_via_action" model="ir.actions.act_window" >
            <field name="name">Ship Via</field>
            <field name="res_model">ship.via</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <!-- Menu for Landed cost -->
						  <menuitem id="ship_vai_menu" parent="base.menu_product"
                  action="ship_via_action"/>       
		<!-- Inherit Action of res.partner -->
		<record id="action_partner_form" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_customer":1}</field>
            <field name="domain">[('parent_id','=',False)]</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
