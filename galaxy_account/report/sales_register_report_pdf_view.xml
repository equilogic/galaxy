<openerp>
	<data>
		<!-- Template for Headre and Footer -->
		<template id="external_layout_galaxy_account_sales_register_pdf">
			<!-- Multicompany -->
			<t t-if="o and 'company_id' in o">
				<t t-set="company" t-value="o.company_id"></t>
			</t>
			<t t-if="not o or not 'company_id' in o">
				<t t-set="company" t-value="res_company"></t>
			</t>

			<t t-call="galaxy_account.external_layout_header_galaxy_account_sales_register_pdf" />
			<t t-raw="0" />
			<!-- <t t-call="galaxy_account.external_layout_footer_galaxy_account_sales_register_pdf" /> -->
		</template>

		<!-- Report Header -->
		<template id="external_layout_header_galaxy_account_sales_register_pdf">
			<div class="header">
				<div class="text-center">
					<div style="font-size:20px">
						<span t-field="get_company(data).name" />
					</div>
					<div>
						<span t-field="get_company(data).street" />
						<span t-field="get_company(data).city" />
						<span t-field="get_company(data).state_id" />
						<span t-field="get_company(data).country_id" />
						<span t-field="get_company(data).zip" />
					</div>
				</div>
				<br/>
				<div class="text-center" style="font-size:18px">
					<b>Sales Register</b>
				</div>
				<br/>
				<div class="text-center" style="font-size:18px">
					<span t-esc="data['form']['st_dt']"/>
						through
					<span t-esc="data['form']['en_dt']"/>
				</div>

				<table width="100%">
					<tr>
						<td class="text-left">
							<span t-esc="datetime.datetime.now().date().strftime('%d-%m-%Y')"/>
						</td>
						<td></td>
						<td></td>
					</tr>
					<tr>
						<td class="text-left">
							<span t-esc="datetime.datetime.now().strftime('%X %p')"/>
						</td>
						<td></td>
						<td class="text-right">
							<span style='text-align:right'>Page</span>
							<span style="padding:5px" class="page"/>
						</td>
					</tr>
				</table>
			</div>
		</template>

		<!-- Footer -->
		<template id="external_layout_footer_galaxy_account_sales_register_pdf">
			<div class="footer">

			</div>
		</template>


		<template id="report_galaxy_sales_register_pdf">
			<t t-call="report.html_container">
				<t t-call="galaxy_account.external_layout_galaxy_account_sales_register_pdf">
					<div class="page">
						<table class="table-condensed" style="font-family:Helvetica;font-size:12px;"
						width="100%">
							<thead>
								<tr style="border-bottom:1px solid;font-family:Helvetica;font-size:10px;">
									<th>
										Date
									</th>
									<th> 
				         				Invoice #
									</th>
									<th>
										Customer PO #
									</th>
									<th>
										Customer Name
									</th>
									<th>
										Amount
									</th>
									<th>
										Amount Due
									</th>
									<th>
										Status
									</th>
								</tr>
							</thead>
							<tbody>
								<tr t-foreach="get_invoice_data(data)" t-as="line">
									<td width="15%">
										<span t-esc="line.get('date')" />
									</td>
									<td width="10%"> 
				         				<span t-esc="line.get('invoice')" />
									</td>
									<td width="10%">
										<span t-esc="line.get('customer_po')" />
									</td>
									<td width="30%">
										<span t-esc="line.get('customer')" />
									</td>
									<td width="8%">
										<span t-esc="line.get('amount')" />
									</td>
									<td width="10%">
										<span t-esc="line.get('amount_due')" />
									</td>
									<td width="8%">
										<span t-esc="line.get('status')" />
									</td>
								</tr>
							</tbody>
						</table>
					</div>
				</t>
			</t>
		</template>
	</data>
</openerp>









