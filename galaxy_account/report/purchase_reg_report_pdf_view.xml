<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<!-- Template for Headre and Footer -->
		<template id="external_layout_galaxy_purchase_register_pdf">
			<!-- Multicompany -->
			<t t-if="o and 'company_id' in o">
				<t t-set="company" t-value="o.company_id"></t>
			</t>
			<t t-if="not o or not 'company_id' in o">
				<t t-set="company" t-value="res_company"></t>
			</t>

			<t t-call="galaxy_account.external_layout_header_galaxy_purchase_order_pdf" />
			<t t-raw="0" />
		</template>

		<!-- Report Header -->
		<template id="external_layout_header_galaxy_purchase_order_pdf">
			<div class="header">
				<div class="text-center">
					<!-- <div>
						<h3>
							<strong>
								<span t-field="o.company_id.name"></span>
							</strong>
						</h3>
					</div>
					<div>
						<span t-field="o.company_id.street" />
						<span t-field="o.company_id.city" />
						<span t-field="o.company_id.state_id" />
						<span t-field="o.company_id.country_id" />
					</div> -->
					<div>
						<h3><b>Purchase Register</b></h3>
					</div>
				</div>
			</div>
		</template>

		<!-- Reports Template -->
		<template id="galaxy_purchase_order_template_pdf">
			<style type="text/css">
				td.line , span.line ,th.line {
				font-family:Helvetica;
				font-size:12px;
				}
			</style>
			<t t-call="report.html_container">
				<t t-call="galaxy_account.external_layout_galaxy_purchase_register_pdf">
					<div class="page" style="font-family:Helvetica;font-size:12px">
						<div class="oe_structure" />
						<div class="row">
							<table width="100%"  class="table-condensed" >
								<thead>
									<tr>
										<th class="text-center line" width="10%" style="padding:10px;border-bottom:1px solid black">Date</th>
										<th class="text-center line" width="10%" style="padding:5px;border-bottom:1px solid black">PO #</th>
										<th class="text-left line" width="35%" style="padding:10px;border-bottom:1px solid black">Supplier Inv #</th>
										<th class="text-left line" width="20%" style="padding:10px;border-bottom:1px solid black">Supplier Name</th>
										<th class="text-center line" width="20%" style="padding:10px;border-bottom:1px solid black">Amount</th>
										<th class="text-center line" width="20%" style="padding:10px;border-bottom:1px solid black">Amount Due</th>
										<th class="text-center line" width="20%" style="padding:10px;border-bottom:1px solid black">Status</th>
										<th class="text-center line" width="20%" style="padding:10px;border-bottom:1px solid black">Received</th>
									</tr>
								</thead>
							</table>
						</div>
					</div>
				</t>
			</t>
		</template>

	</data>
</openerp>
