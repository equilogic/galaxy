<openerp>
	<data>
			<!-- Form view of the wizard of sales register pdf report -->
			<record id="view_sales_register_report_form" model="ir.ui.view">
				<field name="name">view.sales.register.report.form</field>
				<field name="model">wiz.sales.register.report</field>
				<field name="arch" type="xml">
					<form string="Sales Register Report">
						<group colspan="4" col="4">
							<field name="st_dt" required="1"/>
							<field name="en_dt" required="1"/>
						</group>
						<footer>
							<button name="print_report" string="Print" type="object"/>
								or
							<button special="cancel" string="Cancel" class="oe_highlight"/> 
						</footer>
					</form>
				</field>
			</record>

			<!-- Action of the sales register pdf Report Wizard -->
			<record id="action_wiz_sales_register_report" model="ir.actions.act_window">
				<field name="name">Sales Register PDF</field>
				<field name="res_model">wiz.sales.register.report</field>
				<field name="view_type">form</field>
				<field name="view_mode">form</field>
				<field name="target">new</field>
			</record>

			<!-- Menu for the sales register pdf Report Wizard -->
			<menuitem id="menu_sales_register_report" action="action_wiz_sales_register_report" 
				parent="account.menu_finance_receivables"/>
	</data>
</openerp>