<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Form view of Purchase Register Reports Wizard-->
        <record id="wizard_purchase_register_report_pdf_form_view" model="ir.ui.view">
            <field name="name">purchaser.register.pdf.report.form.view</field>
            <field name="model">purchaser.register.pdf.report</field>
            <field name="arch" type="xml">
                <form string="Purchase Register Report">
                	<group>
                		<field name="start_date" />
            			<field name="end_date"/>
            		</group>
                    <footer>
                        <button name="print_report" type="object" string="Print Report"
                            class="oe_highlight"/>
                        Or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action for Purchase Register Report Wizard -->
        <record model="ir.actions.act_window" id="purchase_report_pdf_action">
            <field name="name">Purchase Register PDF</field>
            <field name="res_model">purchaser.register.pdf.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            
        </record>
        
        <!-- Menu for Purchase Register Report Wizard -->
        <menuitem id="wiz_purchase_reg_rpt_pdf" parent="account.menu_finance_payables"
                  action="purchase_report_pdf_action"/>

		
    </data>
</openerp>