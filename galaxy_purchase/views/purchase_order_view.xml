<openerp>
	<data>
         <!-- Inherited form view of Purchase Order -->
         <record id="inherited_purchase_form_view" model="ir.ui.view">
            <field name="name">inherited.purchase.form.view</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//page[@string='Products']/field[@name='order_line']/tree[@string='Purchase Order Lines']/field[@name='name']" position='after'>
            		<field name="origin_ids" widget="many2many_tags" attrs="{ 'readonly':[('no_origin', '=', True)]}" />
            		<field name="no_origin"/>
            	</xpath>
            	<xpath expr="//page[@string='Products']/field[@name='order_line']/tree[@string='Purchase Order Lines']/field[@name='taxes_id']" position='after'> 
            		<field name="landed_cost" />
            		<field name="price" /> 
            	</xpath>
            	<xpath expr="//page[@string='Products']/field[@name='order_line']/tree[@string='Purchase Order Lines']" position='attributes'> 
            		<attribute name="class">my_class</attribute>
            	</xpath>
            	<xpath expr="//page[@string='Products']/group/field[@name='amount_tax']" position='before'> 
            		<field name="total_cost_price" widget="monetary" options="{'currency_field': 'currency_id'}" />
            	</xpath>
            	<field name="currency_id" position="after">
            		<field name="currency_rate"/>
            	</field>
         	</field>
         </record>

        <record id="base.action_partner_supplier_form" model="ir.actions.act_window">
            <field name="name">Suppliers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{'search_default_supplier': 1,'default_customer': 0,'default_supplier': 1}</field>
            <field name="filter" eval="True"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your address book.
              </p><p>
                Odoo helps you easily track all activities related to
                a supplier: discussions, history of purchases,
                documents, etc.
              </p>
            </field>
        </record>

        <record id="base.action_partner_form_view1" model="ir.actions.act_window.view">
            <field eval="3" name="sequence"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="base.res_partner_kanban_view"/>
            <field name="act_window_id" ref="base.action_partner_form"/>
        </record>
         
        <record id="view_request_for_quotation_filter_inherit" model="ir.ui.view">  
            <field name="name">request.quotation.select.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="arch" type="xml">
                 <field name="partner_id" position="after">
                 	<field name="currency_id" />
                 	<field name="date_order" />
                 </field>
                <xpath expr="//search/group/filter[@string='Supplier']" position="after">
                    <filter name="currency_id" string="Currency" domain="[]" context="{'group_by':'currency_id'}"/>
                    <filter string="Day" domain="[ ]" context="{'group_by': 'date_order:day'}" />
                </xpath>
            </field>
        </record>
                 
	</data>
</openerp>